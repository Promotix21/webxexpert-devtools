{
  "name": "aether-ide",
  "version": "1.0.0",
  "description": "WebXExpert Aether IDE - Code editor with AST-powered symbol navigation",
  "main": "src/main/main.js",
  "author": {
    "name": "Rajesh Kumar",
    "company": "WebXExpert"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "rebuild": "npx @electron/rebuild"
  },
  "dependencies": {
    "monaco-editor": "^0.45.0",
    "node-pty": "^1.0.0",
    "@xterm/xterm": "^5.5.0",
    "@xterm/addon-fit": "^0.10.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "@electron/rebuild": "^3.6.0"
  },
  "build": {
    "appId": "com.webxexpert.aether-ide",
    "productName": "Aether IDE",
    "copyright": "Copyright Â© 2024 WebXExpert - Rajesh Kumar",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../aether",
        "to": "aether",
        "filter": ["**/*.py", "**/*.json", "**/*.md", "**/*.txt", "**/*.toml", "!**/__pycache__/**", "!**/.git/**"]
      },
      {
        "from": "../chrome-console-for-claude",
        "to": "chrome-extension",
        "filter": ["**/*", "!**/.git/**"]
      }
    ],
    "win": {
      "target": "nsis",
      "publisherName": "WebXExpert"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Aether IDE",
      "menuCategory": "WebXExpert",
      "include": "installer.nsh",
      "license": "LICENSE.txt",
      "installerSidebar": null,
      "uninstallDisplayName": "Aether IDE"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
